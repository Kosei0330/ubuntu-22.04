{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 2
  },
  "waitFor": "onCreateCommand",
  "postCreateCommand": "sudo /bin/bash .devcontainer/postCreateCommand.sh",
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python",
        "fortran-lang.linter-gfortran",
        "GitHub.copilot",
        "Blamsoft.fprettify",
        "ms-vscode-remote.vscode-remote-extensionpack",
        "ms-vscode-remote.remote-containers"
      ]
    }
  }
}
